/* 页面容器 */
.container {
  width: 100%;
  height: 100%;
  background-color: #F8FAFC;
  padding: 0;
}

/* 导航栏样式 */
.custom-navbar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  display: flex;
  align-items: center;
  z-index: 100;
  padding: 0 16px;
}

/* 主内容区域 */
.main-content {
  width: 100%;
  min-height: 100vh;
  box-sizing: border-box;
  padding-top: 88px;
}

/* 菜单按钮 */
.more-button {
  position: relative;
  left: 0;
  display: flex;
  align-items: center;
}

.more-button image {
  width: 18px;
  height: 18px;
  display: block;
}

/* 位置信息 */
.location {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20px;
}

.location-arrow {
  font-size: 12px;
  margin-left: 4px;
}

/* 天气信息 */
.weather {
  position: relative;
  display: flex;
  align-items: center;
  margin-left: 20px;
}
.weather image {
  width: 17.5px;
  height: 14px;
  margin-right: 4px;
}

/* 页面内容 */
.page-content {
  padding-left: 16px;
  padding-right: 16px;
}
.header-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.text-container {
  margin-top: 10px;
  flex: 1;
  padding-right: 20px;
}

.title {
  font-size: 40rpx;
  font-weight:normal;
  margin-bottom: 8px;
}

.subtitle {
  font-size: 40rpx;
  font-weight: normal;
  margin-bottom: 16px;
}

.description {
  font-size: 28rpx;
  color: #999;
  line-height: 1.5;
}

.panda-container {  
  margin-top:10px;
  width: 120px;
  height: 120px;
  flex-shrink: 0;
}

.panda-container image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 功能列表 */
.function-list {
  margin-top: 30px;
}

.function-item {
  background: #E3F2FD;
  padding: 16px 20px;
  margin-bottom: 12px;
  border-radius: 8px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}

.function-item image {
  color: #999;
  width: 18px;
  height: 18px;
  display: block;
}

/* 快捷按钮容器 */
.quick-button-container {
  position: fixed;
  bottom: 65px; /* 输入框高度是65px */
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-around;
  padding: 10px 16px;
  background-color: #F8FAFC;
}

/* 快捷按钮样式 */
.quick-button-container button {
  border-radius: 8px;
  margin: 0 5px;
  padding: 8px 16px;
  font-size: 14px;
  color: #333;
  background-color: #E0EAFF;
  border:#999;
  border-radius: 5px;
  line-height: 1.2;
  font-weight: normal;
  min-height: unset; /* 覆盖微信按钮默认最小高度 */
}



/* 输入框容器样式 */
.input-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 10px 16px;
  background-color: #ffffff;
  border-top: 1px solid #e0e0e0;
  height: 65px;
  box-sizing: border-box;
}

/* 输入框样式 */
.input-field {
  width: 100%;
  height: 44px;
  padding: 0 10px;
  border: 1px solid #ccc;
  border-radius: 9999px;
  box-sizing: border-box;
}
